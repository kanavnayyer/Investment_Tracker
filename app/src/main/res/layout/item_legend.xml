<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
android:layout_marginBottom="@dimen/_30dp"
    android:paddingTop="@dimen/_50dp">


    <LinearLayout
        android:id="@+id/values"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/backgroundstatis"
        android:gravity="center_vertical">

        <View
            android:id="@+id/legendColor"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_12dp"

            android:background="@drawable/circle_view" />

        <TextView
            android:id="@+id/legendText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/category_name"
            android:lines="1"
            android:textSize="@dimen/_16sp"
android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>


    <TextView
        android:id="@+id/legendAmount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
android:gravity="center"
        android:text="@string/_0vvvvv"
        android:textSize="14sp"
        android:textStyle="bold"
       android:fontFamily="@font/inter_medium"
        android:textColor="@color/black" />


        <ProgressBar
            android:id="@+id/legendProgressBar"

            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:max="100"
            android:progress="0"
            android:layout_marginStart="@dimen/_9dp"
            android:progressTint="@color/purple"
            app:layout_constraintTop_toBottomOf="@+id/values"
            />





</androidx.constraintlayout.widget.ConstraintLayout>
